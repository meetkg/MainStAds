@model MainStAds.Application.DTOs.ErrorViewModelDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Your Application Name</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <main role="main" class="container">
        <div class="text-center">
            <h1 class="display-1">Oops!</h1>
            <p class="lead">Something went wrong.</p>
            <p>We've logged the error with the reference ID: <strong>@Model.RequestId</strong>.</p>
            <p>If this issue persists, please contact support and provide them with this error ID.</p>
            <p><a href="~/">Return to Home</a></p>
        </div>
    </main>
</body>
</html>
